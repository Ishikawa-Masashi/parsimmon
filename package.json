{
  "name": "@ishikawa-masashi/signals",
  "version": "1.0.0",
  "description": "A type checked signal library for TypeScript",
  "main": "./dist/index.es.js",
  "types": "./types/index.d.ts",
  "scripts": {
    "clean": "rimraf dist types",
    "watch": "tsc -w | vite build --watch",
    "build": "yarn clean && tsc && vite build",
    "build:debug": "node --inspect-brk=5858 ./node_modules/.bin/vite build",
    "publish": "npm publish --access public",
    "lint": "eslint --fix \"src/**/*.{js,ts}\""
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.27",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.4.1",
    "rimraf": "^4.1.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vite": "^4.0.4",
    "vitest": "^0.28.3"
  },
  "peerDependencies": {},
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ishikawa-masashi/signals.git"
  }
}
