{
  "name": "@ishikawa-masashi/signals",
  "version": "1.0.0",
  "description": "A type checked signal library for TypeScript",
  "main": "./dist/index.es.js",
  "types": "./types/index.d.ts",
  "scripts": {
    "clean": "rimraf dist types",
    "watch": "tsc -w | vite build --watch",
    "build": "yarn clean && tsc && vite build",
    "build:debug": "node --inspect-brk=5858 ./node_modules/.bin/vite build",
    "publish": "npm publish --access public",
    "lint": "eslint --fix \"src/**/*.{js,ts}\""
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.43",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react-hooks": "^4.4.0",
    "jest": "^27.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3",
    "vite": "^2.9.1"
  },
  "peerDependencies": {},
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ishikawa-masashi/signals.git"
  }
}
